{
  "regions": ["iad1"],
  "rewrites": [
    { "source": "/chat", "destination": "/api/chat" },
    { "source": "/chat-stream", "destination": "/api/chat-stream" }
  ],
  "functions": {
    "api/chat.js": {
      "includeFiles": [
        "api/*.json",
        "public/data/raw_kb.json"
      ],
      "maxDuration": 120,
      "memory": 2048
    },
    "api/chat-stream.js": {
      "includeFiles": [
        "api/*.json",
        "public/data/raw_kb.json"
      ],
      "maxDuration": 120,
      "memory": 2048
    },
    "api/debug-openai.js": {
      "maxDuration": 10,
      "memory": 256
    }
  }
}

