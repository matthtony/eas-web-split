    "api/chat-stream.js": {
      "includeFiles": "api/kb_cache.json",
      "maxDuration": 60,
      "memory": 1024
    },
    "api/debug-openai.js": {
      "maxDuration": 10,
      "memory": 256
    }
  }
}

